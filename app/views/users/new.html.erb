<h3>スケジュール新規作成</h3>
 
<%= form_with model: @user do |f| %>
 <table>
  <tr>
   <th><%= f.label :title ,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>

  <tr>
   <th><%= f.label :start_date ,"開始日" %></th>
   <td><%= f.date_field :start_date %></td>
  </tr>

  <tr>
   <th><%= f.label :start_end ,"終了日" %></th>
   <td><%= f.date_field :start_end %></td>
  </tr>

  <tr>
   <th><%= f.label :checkbox ,"終日" %></th>
   <td><%= f.check_box :checkbox %></td>
  </tr>

  <tr>
   <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
   <td><%= f.text_area :schedule_memo %></td>
  </tr>
 </table>

 <div>
  <ul>
   <li><%= f.submit "登録完了する"%></li>
   <li><%= link_to "スケジュール一覧に戻る", :users %></li>
  </ul>
 </div>
<% end %>